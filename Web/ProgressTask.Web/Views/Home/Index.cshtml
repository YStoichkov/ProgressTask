@model ProgressTask.Web.ViewModels.HtmlData.CreateHtmlDataInputModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-xl-center"><font face="Brush Script MT" size="+7">Welcome to our HTML Preview App</font></h1>
    <p>Save all your HTML templates in our database . Modify them , and check how they are rendered straight away.</p>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    });
</script>


<div class="text-center">
    <div class="row">
        <div class="col-md-12 col-md-offset-2">
            <form method="post" asp-controller="Home" asp-action="Create">
                <div class="form-group">
                    <label asp-for="OriginalText">Enter your HTML here <span class="require">*</span></label>
                    <textarea asp-for="OriginalText" class="form-control" rows="10" id="inputArea" ></textarea>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p><span class="require">*</span> - required fields</p>
                </div>
                <button asp-controller="Home" asp-action="All" class="btn btn-primary" style="margin-top:20px ; margin-right:30px">All saved data</button>
                <button asp-controller="Home" asp-action="ParseHtml"class="btn btn-danger" style="margin-top:20px ; margin-right:30px; margin-left:30px">Run HTML</button> 
                <button class="btn btn-success" style="margin-top: 20px;margin-left:30px">Save data</button>
            </form>
        </div>
    </div>
</div>



